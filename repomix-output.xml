      severity: string;
      attack_type_code?: string;
      state: string;
      eal_low?: number | null;
      eal_ml?: number | null;
      eal_high?: number | null;
      eal_daily?: number | null;
    }) => {
      const escapeCsv = (field: string) => field ? `"${field.replace(/"/g, '""')}"` : '""'
      return [
